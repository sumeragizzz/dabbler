# .editorconfigファイルのルートを指定
root = true

# すべてのファイルに適用される一般設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# YAMLファイルに特化した設定
[*.yml]
indent_style = space
indent_size = 2

# Markdownファイルに特化した設定
[*.md]
trim_trailing_whitespace = false

# JSONファイルに特化した設定
[*.json]
indent_style = space
indent_size = 2
